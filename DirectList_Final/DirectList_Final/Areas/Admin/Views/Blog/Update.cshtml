@model Blog

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Blog" asp-action="Update" method="post" enctype="multipart/form-data">
    @{
        if (TempData["BlogError2"] != null)
        {
            <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["BlogError2"]</p>

            TempData["BlogError2"] = null;
        }
    }
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input class="form-control" asp-for="@Model.Title">
        <span class="text-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.BlogInfo" class="form-label">Content Info</label>
        <input class="form-control" asp-for="@Model.BlogInfo">
        <span class="text-danger" asp-validation-for="@Model.BlogInfo"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Text" class="form-label">Content</label>
        <textarea class="form-control ckeditor" asp-for="@Model.Text"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Text"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ImageFile" class="form-label">Image</label>
        <input class="form-control" asp-for="@Model.ImageFile">
        <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
    </div>

    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.CreatedDate" />
    <input type="hidden" asp-for="@Model.CustomUserId" />
    <input type="hidden" asp-for="@Model.Image" />

    <button type="submit" class="btn btn-primary">Update</button>
</form>

