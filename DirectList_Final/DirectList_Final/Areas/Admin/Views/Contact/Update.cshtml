@model ContactUs

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Contact" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Address" class="form-label">Address</label>
        <input class="form-control" asp-for="@Model.Address">
        <span class="text-danger" asp-validation-for="@Model.Address"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Phone" class="form-label">Phone</label>
        <input class="form-control" asp-for="@Model.Phone">
        <span class="text-danger" asp-validation-for="@Model.Phone"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label">Email</label>
        <input class="form-control" asp-for="@Model.Email">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>

    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>

