@model Guest

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Guest" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="@Model.GuestCount" class="form-label">Guest Count (Please write in letters)</label>
        <input class="form-control" asp-for="@Model.GuestCount">
        <span class="text-danger" asp-validation-for="@Model.GuestCount"></span>
    </div>

    <input hidden asp-for="@Model.Id" />
    <button type="submit" class="btn btn-success">Update</button>
</form>

