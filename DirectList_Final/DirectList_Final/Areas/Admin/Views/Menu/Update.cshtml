@model Menu
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<form class="my-5 p-5" asp-area="Admin" asp-controller="Menu" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="@Model.MenuName" class="form-label">Menu Name</label>
        <input class="form-control" asp-for="@Model.MenuName">
        <span class="text-danger" asp-validation-for="@Model.MenuName"></span>
    </div>

    <input hidden asp-for="@Model.Id"/>
    <button type="submit" class="btn btn-success">Update</button>
</form>

