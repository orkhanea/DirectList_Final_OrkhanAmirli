@model List<Process>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center my-3" style="font-size: 35px !important; font-weight: 600 !important; color: #3b579d !important; ">Processes</h4>

                @{
                    if (Model.Count < 3)
                    {
                        <a class="btn btn-primary mb-3 px-5" asp-area="Admin" asp-controller="Process" asp-action="Create">Create New</a>
                    }
                }

                @{
                    if (TempData["ProcessError"] != null)
                    {
                        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["ProcessError"]</p>

                        TempData["ProcessError"] = null;
                    }
                }
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Title
                                </th>
                                <th class="tableTrCustom">
                                    Text
                                </th>
                                <th class="tableTrCustom">
                                    Icon
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @counter
                                        </td>
                                        <td style=" width: 200px !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Title
                                        </td>
                                        <td style="width: 400px !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Text
                                        </td>
                                        <td style=" width: 200px !important; font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Icon
                                        </td>
                                        <td>
                                            <a class="mb-2 w-50 btn-sm btn btn-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Process" asp-action="Update">Update</a>
                                            <br>
                                            <a class="w-50 btn-sm btn btn-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Process" asp-action="Delete" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

