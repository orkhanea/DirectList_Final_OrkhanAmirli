@model List<RestourantTag> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-size: 35px !important; font-weight: 600 !important; color: #3b579d !important; ">Restourant Tags</h4>
                <a class="btn btn-primary mb-3 px-5" asp-area="Admin" asp-controller="RestourantTag" asp-action="Create">Add New</a>
                @{
                    if (TempData["TagError"] != null)
                    {
                        <p style="font-size: 20px !important;" class="alert alert-danger">@TempData["TagError"]</p>

                        TempData["TagError"] = null;
                    }
                }
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th class="tableTrCustom">
                                    #
                                </th>
                                <th class="tableTrCustom">
                                    Tag Name
                                </th>
                                <th class="tableTrCustom">
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @counter
                                        </td>
                                        <td style="font-size: 18px !important; font-weight: 500 !important;">
                                            @item.Name
                                        </td>
                                        <td>
                                            <a class="my-2 w-75 btn-sm btn btn-success" asp-route-id="@item.Id" asp-area="Admin" asp-controller="RestourantTag" asp-action="Update">Update</a>
                                            <br>
                                            <a class="w-75 btn-sm btn btn-danger" asp-route-id="@item.Id" asp-area="Admin" asp-controller="RestourantTag" asp-action="Delete" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

