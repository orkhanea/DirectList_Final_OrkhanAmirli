@model Setting 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center mb-4" style="font-size: 35px !important; font-weight: 600 !important; color: #3b579d !important;">Setting</h4>
                @{
                    if (Model == null)
                    {
                        <a class="btn btn-primary mb-3 px-5" asp-area="Admin" asp-controller="SiteSetting" asp-action="Create">Create</a>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-bordered table-striped">
                                <thead>
                                    <tr style="text-align: center !important">
                                        <th>
                                            Logo
                                        </th>
                                        <th>
                                            Home page banner
                                        </th>
                                        <th>
                                            Info
                                        </th>
                                        <th>
                                            Phone
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Address
                                        </th>
                                        <th>
                                            Update
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="text-center">
                                        <td class="py-1" style=" width: 100px !important; height: auto !important;">
                                            <img style="border-radius: unset !important; width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/assets/images/@Model.Logo" alt="image" />
                                        </td>
                                        <td class="py-1" style="width: 160px !important; height: auto !important;">
                                            <img style="border-radius: unset !important; width: 100% !important; height: 100% !important; object-fit: contain !important;" src="~/assets/images/@Model.BgImage" alt="image" />
                                        </td>
                                        <td style=" width: 275px !important;">
                                            @Model.FooterText
                                        </td>
                                        <td>
                                            @Model.Phone
                                        </td>
                                        <td>
                                            @Model.Email
                                        </td>
                                        <td>
                                            @Model.Address
                                        </td>
                                        <td>   
                                            <a asp-controller="SiteSetting" asp-action="Update" class="btn btn-info">Update</a>    
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
    
</div>

