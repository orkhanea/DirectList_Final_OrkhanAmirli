                                </svg>
                                <h4 class="display-3 font-weight-bold text-white">Our Goal</h4>
                                <p class="lead text-italic text-white">
                                    @Model.AboutUs.ImageText
                                </p>
                            </blockquote>
                        </div>
                    </div>
                    <div class="col-md-6">
