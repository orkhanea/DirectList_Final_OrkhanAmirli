@model VmFavourite
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-space bg-secondary">
    <div class="block-head text-center mb-5">
        <h2 class="head-line display-3">
            Restourants You Liked
        </h2>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="row row-grid">
                    @{
                        foreach (var b in Model.restourants)
                        {
                            <div class="col-lg-4 my-3">
                                <div class="card card-lift--hover shadow border-0">
                                    <div style=" height: auto !important; width: 100% !important;">
                                        <img class="img-fluid" style="width: 100% !important; height: 100% !important; object-fit: cover !important;" src="assets/images/@b.Logo" alt="list-logo">
                                    </div>
                                    <div class="card-body py-4" style="height: auto !important;">
                                        <h5>@b.Name</h5>
                                        <p>
                                            @{
                                                var time = b.OpeningTime - b.OpeningTime.Date;
                                                var time2 = b.ClosingTime - b.ClosingTime.Date;
                                                var currentTime = DateTime.Now - DateTime.Now.Date;

                                                if (currentTime > time && currentTime < time2)
                                                {
                                                    @("Open")
                                                }
                                                else
                                                {
                                                    @("Closed")
                                                }

                                            }
                                        </p>
                                        <p class="description mb-4" style="height: 81.6px !important;">@b.Address</p>
                                        <a class="btn btn-primary" asp-controller="Restourant" asp-action="SingleRestourant" asp-route-Id="@b.Id">Go to...</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
