@model List<Restourant>
@{
    Layout = null;
}

<div class="block-space">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <h2 class="display-3">Restourants Managers</h2>
                <p class="lead">Un değirmeni sıradanlıktan adanaya sarmal açılmadan dolayı batarya kutusu anlamsız gördüm salladı ışık dağılımı dışarı çıktılar.</p>
            </div>
        </div>
        <div class="row">
            @{
                foreach (var r in Model)
                {
                    <div class="col-md-6 col-lg-3 mb-5 mb-lg-0">
                        <div class="px-4">
                            <img src="assets/images/@r.ManagerImage" class="rounded-circle img-center img-fluid shadow shadow-lg--hover" style="width: 200px;" alt="list-logo">
                            <div class="pt-4 text-center">
                                <h5 class="title">
                                    <span class="d-block mb-1">@r.ManagerName @r.ManagerSurName</span>
                                    <small>Manager of the <br /> <span style="font-size: 20px !important; font-weight: 600 !important; color: #2683bc !important;">@r.Name</span></small>
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</div>
