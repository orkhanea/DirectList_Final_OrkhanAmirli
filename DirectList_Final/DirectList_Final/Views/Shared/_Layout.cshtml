                                </div>
                            </div>
                        </div>
                        <div class="navbar-nav navbar-nav-hover align-items-lg-center ml-auto">
                            <nav id="navigation" class="style-1">
                                <ul id="responsive">
                                    <li>
                                        <a class="current" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Restourant" asp-action="Index">Restourants</a>
                                    </li>
                                    <li>
                                        <a asp-controller="About" asp-action="Index">About Us</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Blog" asp-action="Index">Blogs</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Contact" asp-action="Index">Contact</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="header-widget">
                        <a asp-controller="Favourite" asp-action="Index" class="btn btn-neutral btn-icon btn-radius" style="color: #5e72e4 !important;">Favourites
                        <span style="height: 20px !important; width: 20px !important; color: #fff !important;" class="@(favourites==0?"d-none":"") ml-1 badge rounded-circle bg-danger">
                            @{ 
                                if (favourites!=0)
                                {
                                    @favourites;
                                }
                            }
                        </span>
                        </a>
                    </div>
                </div>
            </nav>
        </header>
        @RenderBody()
        <div id="footer" class="sticky-footer bg-primary">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 col-sm-6">
                        <a asp-controller="Home" asp-action="Index"><img class="footer-logo img-fluid" src="~/assets/images/@Model.Setting.Logo" alt="list-logo"></a>
