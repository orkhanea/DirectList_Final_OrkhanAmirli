@inject IHttpContextAccessor _httpContextAccessor
@{ 
    string oldData = _httpContextAccessor.HttpContext.Request.Cookies["favourites"];
    int favourites = 0;
    if (!string.IsNullOrEmpty(oldData))
    {
        favourites = oldData.Split("-").Length;
    }
}
@model VmLayout

<!doctype html>
<html lang="en">


